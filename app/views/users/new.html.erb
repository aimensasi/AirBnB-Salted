<div id="clearance" class="sign-up col-md-6 col-md-offset-3">
  <h2><%= t(".title") %></h2>

  <%= form_for @user do |form| %>
    <%= render partial: '/users/partials/form', object: form %>

    <div class="submit-field form-group">
      <%= form.submit "Sign Up", class: "btn btn-success" %>
    </div>
    
    <div class="other-links form-group">
      <%= link_to t(".sign_in"), sign_in_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>