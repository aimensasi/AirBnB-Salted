<div class="profile">
  <nav class="navbar navbar-dark bg-inverse">
    <ul class="nav navbar-nav container">
      <li class="nav-item">
        <a class="nav-link " data-toggle="tab" href="#listings" role="tab">Your Listings</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#trips" role="tab">Your Trips</a>
      </li>
      <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#profile" role="tab">Profile</a>
      </li>
    </ul>
  </nav>
  <div class="tab-content container">
    <div class="tab-pane listings" id="listings" role="tabpanel">
      <div class="col-md-3 listing-opt flex flex-col">
          <ul class="nav" role="tablist">
            <li class="nav-item">
              <a data-toggle="tab" href="#listings-panel" class="your-lisitngs active"  role="tab">Your Listings</a>
            </li>
            <li class="nav-item m-t-1">
              <a data-toggle="tab" href="#reservations-panel" class="your-reservations"  role="tab">Your Reservations</a>
            </li>
          </ul>
        <%= link_to("Add New Listing", new_listing_path , :class => "btn btn-new-listing m-t-1") %>
      </div> <!-- Listing Opt -->
      <div class="col-md-9">
        <div class="tab-content">
          <div class="tab-pane listing-list active" id="listings-panel" role="tabpanel">
            <%= render :partial => "listings/partials/user_listing", 
                       :locals => {:listings => @user.listings} %>
          </div>
          <div class="tab-pane reservation-list" id="reservations-panel" role="tabpanel">
              <% @user.listings.each do |listing| %>
                  <%= render :template => "reservations/show.html.erb", 
                         :locals => {:reservations => listing.reservations} %>
              <% end %>
          </div>
        </div>
      </div> <!-- col-md-9 -->
    </div> <!-- Listings container Tab -->

    <div class="tab-pane listings col-md-9" id="trips" role="tabpanel">
        <%= render :template => "reservations/show.html.erb", 
               :locals => {:reservations => @user.reservations} %>
    </div> <!-- Trips container Tab -->

    <div class="tab-pane profile-info active" id="profile" role="tabpanel">
      <div class="col-md-10">  
        <div class="card profile-card">
          <div class="card-header">
              Profile Photo
          </div>
          <div class="card-block flex">
            <%= render :partial => "users/partials/edit_photo", :locals => {:user => @user} %>
          </div>
        </div> <!-- Profile card --> 
        <div class="card profile-card">
          <div class="card-header">
            Profile Info
          </div>
          <div class="card-block">
            <%= render :partial => "users/partials/edit_form", :locals => {:user => @user} %>
          </div> <!-- Card Block -->
        </div> <!-- Profile card --> 

      </div> <!-- col-md-10 -->
    </div> <!-- Profile Info container tab -->

  </div> <!-- Tabs container -->
</div> <!-- Profile Div--> 

