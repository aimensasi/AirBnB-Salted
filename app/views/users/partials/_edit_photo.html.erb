<div class="profile-pic">
  <div class="cover"></div>
  <% if  user.avatar.file.nil? %>
    <img src="/assets/user_pic.png" class="user-pic" alt="user-pic" width="330" height="200">
  <% else %>
    <img src="<%= user.avatar.url %>" class="user-pic" alt="user-pic" width="330" height="200">
    <%= link_to "/users/#{user.id}/destroy_avatar", :method => :delete, :class => "no-color"  do %>
      <i class="material-icons icon-delete">close</i>  
    <% end %>
  <% end %>
</div>

<div class="photo-desc">
  <p class="leads">
