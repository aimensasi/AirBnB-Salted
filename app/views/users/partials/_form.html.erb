<%= form_for @user do |form| %>
  <div class="sign-up col-md-6 col-md-offset-3">
    <div class="form-group">
      <%= form.label :first_name %>
      <%= form.text_field :first_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :last_name %>
      <%= form.text_field :last_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :email %>
      <%= form.text_field :email, type: 'email', class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :gender %>
      <%= form.text_field :gender, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :bithday %>
      <%= form.text_field :birthday, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :country %>
      <%= form.text_field :country, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :state %>
      <%= form.text_field :state, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :zip_code %>
      <%= form.text_field :zip_code, class: "form-control" %>
    </div>

    <div class="password-field form-group">
      <%= form.label :password %>
      <%= form.password_field :password, class: "form-control" %>
    </div>

    <%= form.submit btn, class: "btn btn-success" %>

    <%= link_to t(".sign_in"), sign_in_path, class: "btn btn-secondary" %>
    
  </div>
<% end %>






