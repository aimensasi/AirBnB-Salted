<div class="modal-content">
  <div class="modal-body">
    <div class="alert-box"></div>
    <%= link_to '/auth/facebook' , :class => "btn btn-primary btn-fb" do %>
      <i class="fa fa-facebook-official fa-lg" aria-hidden="true"></i>
      Log In With Facebook
    <% end %>
    <div class="divider">Or</div>
    <%= form_for @user, :remote => true, authenticity_token: true, :html => {:class => "sign-in-form"} do |form|%>
      <div class="form-group form-in flex">
        <%= form.text_field :email, type: 'email', class: 'form-control', placeholder: 'Email Address' %>
        <i class="fa fa-envelope-o fa-lg" aria-hidden="true"></i>
      </div>
      <div class="form-group form-in flex">
        <%= form.text_field :first_name, class: 'form-control', placeholder: 'First Name' %>
        <i class="fa fa-user-o fa-lg" aria-hidden="true"></i>
      </div>
      <div class="form-group form-in flex">
        <%= form.text_field :last_name, class: 'form-control', placeholder: 'Last Name' %>
        <i class="fa fa-user-o fa-lg" aria-hidden="true"></i>
      </div>
      <div class="form-group form-in flex">
        <%= form.password_field :password, type: 'password', class: 'form-control', placeholder: 'Password' %>
        <i class="fa fa-lock fa-lg" aria-hidden="true"></i>
      </div>
      <div class="form-group">
        <%= form.submit "Sign Up", class: "submit" %>
      </div>
    <% end %>
    <div class="group-option flex">
      <span class="title">Already have an Airbnb account?</span>
      <%= link_to("Sign In", sign_in_path , :class => "btn btn-primary btn-sign-up") %>
    </div>
  </div>
</div>
