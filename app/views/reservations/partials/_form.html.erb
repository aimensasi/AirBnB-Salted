<%= form_for :reservations, :url => "/listings/#{listing.id}/reservations" do |f| %>
    <div class="row flex flex-col">
      <div class="form-group">
        <%= f.label :check_in_date %>
        <%= f.text_field :check_in_date, :type => 'date', 
            :class => "form-control date", 
            :placeholder => "mm/dd/yyyy", :id => "check_in_date" %> 
      </div>
      <div class="form-group">
        <%= f.label :check_out_date %>
        <%= f.text_field :check_out_date, :type => 'date', 
            :class => "form-control date", 
            :placeholder => "mm/dd/yyyy", :id => "check_out_date" %> 
      </div>
      <div class="form-group">
        <%= f.label :guest_no %>
        <%= f.select :guest_no, {}, {}, :class => 'guests-no custom-select' do %>
          <% listing.guest_no.times do |n| %>
            <option value="<%= n + 1 %>"> <%= n + 1 %></option>
          <% end %>
        <% end %>
      </div>
      <% if is_admin_or_current(listing.owner) %>
        <%= f.submit "Book Now!", :class => "btn submit", :disabled => true %>
      <% else %>
        <%= f.submit "Book Now!", :class => "btn submit" %>
      <% end %>
      
    </div>
<% end %>
