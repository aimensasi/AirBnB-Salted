<div class="container-fluid">
	<div class="row">
		<div class="">
			<div class="panel panel-warning">
			  <!-- Default panel contents -->
			  <div class="panel-heading text-center">Listings</div>
			  <!-- Table -->
			  <table class="table table-responsive table-hover">
			    <thead>
			    	<th>Listing No</th>
			    	<th>Room Type</th>
			    	<th>House Type</th>
			    	<th>Price Per Night</th>
			    	<th>Number Of Beds</th>
			    	<th>Number Of Bathrooms</th>
			    	<th>Guest No</th>
			    	<th>Street Adress</th>
			    	<th>Country</th>
			    	<th>State</th>
			    	<th>Zip Code</th>
			    	<th>Avaliability</th>
			    	<th>Check In Time</th>
			    	<th>Check Out Time</th>
			    </thead>
			    <tbody>
			    	<% @listings.each_with_index do |listing, index| %>
			    	<tr>
			    		<td><%= index + 1 %></td>
			    		<td><%= listing.room_type %></td>
			    		<td><%= listing.house_type %></td>
			    		<td><%= number_to_currency listing.price_per_night %></td>
			    		<td><%= listing.beds_number %></td>
			    		<td><%= listing.bathrooms_number %></td>
			    		<td><%= listing.guest_no %></td>
			    		<td><%= listing.address %></td>
			    		<td><%= listing.country %></td>
			    		<td><%= listing.state %></td>
			    		<td><%= listing.zip_code %></td>
			    		<td><%= listing.is_available ? 'Yes' : 'No' %></td>
			    		<td><%= listing.check_in_time.to_s(:time) %></td>
			    		<td><%= listing.check_out_time.to_s(:time) %></td>
			    	</tr>
			    	<% end %>
			    </tbody>
			  </table>
			<%= will_paginate @listings %>
			</div> <!-- panel -->
		</div> <!-- colomun -->
	</div> <!-- row -->
</div> <!-- container -->
