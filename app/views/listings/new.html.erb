<div class="form-group container">
	<%= form_for @listing do |form|%>

		<div class="form-group row">
		    <label for="house_type" class="col-xs-2 col-form-label">Property Type</label>
		    <div class="col-xs-10">
		    <%= form.select :house_type, 
		    options_for_select(['House', 'Apartment']), {:include_blank => true}, :class => 'form-control' %>
		    </div>
		</div>

		<div class="form-group row">
		    <label for="room_type" class="col-xs-2 col-form-label">Room Type</label>
		    <div class="col-xs-10">
		    <%= form.select :room_type, 
		    options_for_select(['Shared Room', 'Private Room', 'Entire Home']), {:include_blank => true}, :class => 'form-control' %>
		    </div>
		</div>
		
		<div class="form-group row">
		    <label for="beds_number" class="col-xs-2 col-form-label">Number Of Bathrooms</label>
		    <div class="col-xs-10">
		    <%= form.select :beds_number, 
		    options_for_select(1..15, 3), {}, :class => 'form-control' %>
		    </div>
		</div>

		<div class="form-group row">
		    <label for="bathrooms_number" class="col-xs-2 col-form-label">Number Of Beds</label>
		    <div class="col-xs-10">
		    <%= form.select :bathrooms_number, 
		    options_for_select(1..15, 2), {}, :class => 'form-control' %>
		    </div>
		</div>
			
		<div class="form-group row">
		  <label for="price_per_night" class="col-xs-2 col-form-label">Price Per Night</label>
		  <div class="col-xs-10">
		    <%= form.text_field :price_per_night, 
						:class => "form-control", :id => "price_per_night" %>	
		  </div>
		</div>

		<div class="form-group row">
		  <label for="check_in_time" class="col-xs-2 col-form-label">Check In Time</label>
		  <div class="col-xs-10">
		    <%= form.text_field :check_in_time, :type => 'time', 
						:class => "form-control", :value => "14:00:00", :id => "check_in_time" %>	
		  </div>
		</div>

		<div class="form-group row">
		  <label for="check_out_time" class="col-xs-2 col-form-label">Check Out Time</label>
		  <div class="col-xs-10">
		    <%= form.text_field :check_out_time, :type => 'time', 
						:class => "form-control", :value => "14:00:00", :id => "check_out_time" %>	
		  </div>
		</div>



		<%= form.submit %>
	<% end %>
</div>