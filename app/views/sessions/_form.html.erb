<!-- Modal -->
<div class="modal fade" id="sign-in-form" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= form_for :session, url: session_path, :remote => true do |form| %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>

          <h4 class="modal-title" id="myModalLabel">Sign Up</h4>
        </div>

        <div class="modal-body">
          <div class="form-group">
            <%= form.text_field :email, class: "form-control", :placeholder => "Email Address" %>
          </div>
          <div class="form-group">
            <%= form.password_field :password, class: "form-control", :placeholder => "Password" %>
          </div>
        </div>

        <div class="modal-footer">
          <%= link_to t(".forgot_password"), new_password_path %>
          <%= link_to t(".sign_up"), sign_up_path, class: "btn btn-secondary" %>
          <%= link_to "Log In Wiht Facebook", "/auth/facebook", class: "btn btn-primary" %>
          <%= form.submit "Sign In", class: "btn btn-success" %>
        </div>

      <% end %> <!-- end of form -->
    </div> <!-- modal-content -->
  </div> <!-- modal-dialog -->
</div> <!-- modal-->


