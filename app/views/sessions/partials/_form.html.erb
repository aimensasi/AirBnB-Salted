<div class="modal-content">
  <div class="modal-body">
    <% if  flash[:notice] %>
      <div class="alert-box"><h2><%= flash[:notice] %></h2></div>
    <% end %>
    <%= link_to '/auth/facebook' , :class => "btn btn-primary btn-fb" do %>
      <i class="fa fa-facebook-official fa-lg" aria-hidden="true"></i>
      Log In With Facebook
    <% end %>
    <div class="divider">Or</div>
    <div class="sign-in-form">
      <%= form_for :session, :url => session_path do |form| %>
        <div class="form-group form-in flex">
          <%= form.text_field :email, type: 'email', class: 'form-control', placeholder: 'Email Address' %>
          <i class="fa fa-envelope-o fa-lg" aria-hidden="true"></i>
        </div>
        <div class="form-group form-in flex">
          <%= form.password_field :password, type: 'password', class: 'form-control', placeholder: 'Password' %>
          <i class="fa fa-lock fa-lg" aria-hidden="true"></i>
        </div>
        <div class="form-group">
          <label class="form-check-label">
            <%= form.check_box :remember_token, :class => "form-check-input" %> 
            <span style="font-family: serif;">Remember me</span>
          </label>
        </div>
        <div class="form-group">
          <%= form.submit "Sign In", class: "submit" %>
        </div>
      <% end %>  
    </div>
    <div class="group-option flex">
      <span class="title">Do not have an account?</span>
      <%= link_to("Sign Up", sign_up_path , :class => "btn btn-primary btn-sign-up") %>
    </div>
  </div>
</div> <!-- Modal-content -->